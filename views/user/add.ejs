		<tr>
			<center><td>Name</td></center>
		<center>	<td><input type="text" name="name" id="name" value="<%= name %>" /></td>	</center>
		</tr>
	<center>	<tr>
			<td>Age</td>
			<td><input type="text" name="age" value="<%= age %>" /></td>
		</tr></center>
	<center>	<tr>
			<td>Email</td>
			<td><input type="text" name="email" value="<%= email %>" /></td>
		</tr></center>
	<center>	<tr>
			<td></td>
			<td><input type="submit" name="Submit" value="Add" /></td>
		</tr></center>
	</table>
</form>

